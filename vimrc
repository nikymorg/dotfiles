" show line numbers
set number

" syntax highlighting
set syntax

" keep 500 commands in history
set history=500

" show cursor position
set ruler

" show incomplete commands
set showcmd

" show menu for tab completion
set wildmenu

" keep 5 line margin
set scrolloff=5

" search settings
set hlsearch
set incsearch

" line wrap at space
set lbr

" indent settings
set autoindent
set smartindent

" tab settings
set shiftwidth=2
set tabstop=2

" colorscheme
set bg=dark
color desert
